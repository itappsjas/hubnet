generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id_usr    Int      @id @default(autoincrement())
  id_role   Int
  email     String   @unique
  password  String
  is_active Int      @default(1)

  role      tb_role  @relation(fields: [id_role], references: [id_role])
}

model tb_role {
  id_role   Int      @id @default(autoincrement())
  code_role String
  is_active Int      @default(1)

  users     tb_user[]
}


