generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id_usr    Int          @id @default(autoincrement())
  id_role   Int
  id_air    Int?
  email     String       @unique
  password  String
  is_active Int          @default(1)
  role      tb_role      @relation(fields: [id_role], references: [id_role])
  airline   tb_airline?  @relation(fields: [id_air], references: [id_air])

  @@index([id_role], map: "tb_user_id_role_fkey")
  @@index([id_air], map: "tb_user_id_air_fkey")
}

model tb_role {
  id_role   Int       @id @default(autoincrement())
  code_role String
  is_active Int       @default(1)
  users     tb_user[]
}

model tb_airline {
  id_air       Int        @id @default(autoincrement())
  airline_code String?    @db.VarChar(5)
  airline_name String?    @db.VarChar(50)
  users        tb_user[]
}
