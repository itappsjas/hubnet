generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id_usr              Int       @id @default(autoincrement())
  id_role             Int
  id_air              Int
  email               String    @unique
  password            String
  is_active           Int       @default(1)
  reset_token         String?   @db.VarChar(10)
  reset_token_expires DateTime? @db.DateTime(0)
  role                tb_role   @relation(fields: [id_role], references: [id_role])

  @@index([id_role], map: "tb_user_id_role_fkey")
  @@index([reset_token], map: "idx_reset_token")
}

model tb_role {
  id_role   Int       @id @default(autoincrement())
  code_role String
  is_active Int       @default(1)
  users     tb_user[]
}

model tb_airline {
  id_air       Int     @id @default(autoincrement())
  airline_code String? @db.VarChar(5)
  airline_name String? @db.VarChar(50)
}
